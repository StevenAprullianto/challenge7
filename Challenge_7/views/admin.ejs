<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/bootstrap-5.2.2-dist/css/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="container border border-primary border-3 rounded-4 w-75 h-auto p-3">
        <div class="m-0 p-0">
            <form class="row g-3" action="/admin" method="POST">
                <a href="/admin_add_new">
                    <button type="button" class="btn btn-outline-primary">
                        Add New
                    </button>
                </a>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Name</th>
                            <th scope="col" class="text-center">Email</th>
                            <th scope="col" class="text-center">Mobile Number</th>
                            <th scope="col" class="text-center">Gender</th>
                            <th scope="col" class="text-center">Edit</th>
                            <th scope="col" class="text-center">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(i => { %>
                        <tr>
                            <td><%= i.name %></td>
                            <td><%= i.email %></td>
                            <td><%= i.mobile %></td>
                            <td><%= i.gender %></td>
                            <td>
                                <center>
                                    <button type="submit" class="btn btn-outline-primary"
                                        formaction="/admin/edit?id=<%= i.id %>">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </center>
                            </td>
                            <td>
                                <center>
                                    <button type="submit" class="btn btn-outline-danger"
                                        formaction="/admin/delete?id=<%= i.id %>">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </center>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</body>

</html>